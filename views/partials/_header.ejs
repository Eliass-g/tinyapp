<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
      <% if (user === undefined) { %>
    <form class="form-inline justify-content-end" action="/login" method="GET">
      <div class="form-group mb-2">
        <button type="submit" class="btn btn-primary" style="margin-right: 10px">Login</button>
      </div>
    </form>
    <form class="form-inline justify-content-end" action="/register" method="GET">
      <div class="form-group mb-2">
        <button type="submit" class="btn btn-primary">Register</button>
      </div>
    </form>
    <% } else { %>
      <form class="form-inline justify-content-end" action="/logout" method="POST">
        <div class="form-group mb-2">
          <%= "Logged in as: " + user.email + "!" %>
          &nbsp
          <button type="submit" class="btn btn-primary">Logout</button>
        </div>
      </form>
    <% } %>
  </nav>
</header>